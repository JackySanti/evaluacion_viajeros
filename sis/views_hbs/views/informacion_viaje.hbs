							<div class="formulario_grupo" id="grupo_fecha_llegada">
								<label class="formulario_label">Fecha de llegada:</label>
								<div class="formulario_grupo-input">
									<input type="date" class="formulario_input" name="f_llegada" id="f_llegada"
										placeholder="aaaa-mm-dd">
								</div>
							</div>

							<div class="formulario_grupo" id="grupo_fecha_partida">
								<label class="formulario_label">Fecha de partida:</label>
								<div class="formulario_grupo-input">
									<input type="date" class="formulario_input" name="f_partida" id="f_partida"
										placeholder="aaaa-mm-dd">
								</div>
							</div>
							<div class="coupon-input form-row-last">
								<label>Ultima ciudad y país / puerto de embarcación (Salida)</label>
								<input class="formulario_input" value="{{cd_salida}}" id="ultima_salida" name="ultima_salida" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Ultima ciudad y país / puerto de embarcación (Entrada)</label>
								<input class="formulario_input" value="{{cd_entrada}}" id="ultima_entrada" name="ultima_entrada" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Modo de viaje</label>
								<input class="formulario_input" value="{{m_viaje}}" id="modo_viaje" name="modo_viaje" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Número de asiento (si se conoce antes del viaje)</label>
								<input class="formulario_input" value="{{n_asiento}}" id="numero_asiento" name="numero_asiento" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Número de acompañantes (si se conoce antes del viaje)</label>
								<input  class="formulario_input" value="{{n_acomanantes}}" id="numero_acompanantes" name="numero_acompanantes" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Nombre de la residencia de estancia</label>
								<input class="formulario_input" value="{{n_estancia}}" id="estancia" name="estancia" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Calle</label>
								<input class="formulario_input" value="{{calle}}" id="calle" name="calle" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Número</label>
								<input  class="formulario_input" value="{{numero}}" id="numero" name="numero" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Colonia</label>
								<input class="formulario_input" value="{{colonia}}" id="colonia" name="colonia" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Código postal</label>
								<input class="formulario_input" value="{{cp}}" id="codigo_postal" name="codigo_postal" type="text" maxlength="10" onpaste="return false"
									onkeypress="return validate(event)">
							</div>
							<div class="coupon-input form-row-last">
								<label>Provincia</label>
								<input class="formulario_input" value="{{provincia}}" id="provincia" name="provincia" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>País</label>
								<input class="formulario_input" value="{{pais}}" id="pais" name="pais" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Motivo del viaje</label>
								<input class="formulario_input" value=" {{mtv_viaje}}" id="motivo" name="motivo" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label>Lista de Países que visito (últimos 14 días)</label>
								<input class="formulario_input" value="{{l_paises}}" id="lista_paises" name="lista_paises" type="text">
							</div>
							<div class="formulario_grupo formulario_grupo-btn-enviar">
							<button onclick="" type="button" class="formulario_btn">Editar</button>
							</div>
						</form>
