<!DOCTYPE html>
<html lang="es">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
	<title>Evaluación Viajeros</title>
	{{>styles}}
	<script src="/js/vendor/modernizr-2.8.3.min.js"></script>
	<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
</head>

<body>
	{{>header}}
	<div class="contenedor">

		<div class="contenido">
			<h1>Identificación del Pasajero</h1><br>
			{{#if registro}}
				{{#if permiso}}
					<main>
							<form id="form_identificacion" class="formulario">
								<div class="coupon-input form-row-last">
									<label class="formulario_label">Nombre</label>
									<input class="formulario_input" id="nombre" name="nombre" type="text" value="{{nombre}}" disabled>
								</div>
								<div class="coupon-input form-row-last">
									<label class="formulario_label">Paterno</label>
									<input class="formulario_input" id="paterno" name="paterno" type="text" value="{{paterno}}" disabled>
								</div>
								<div class="coupon-input form-row-last">
									<label class="formulario_label">Materno</label>
									<input class="formulario_input" id="materno" name="materno" type="text" value="{{materno}}" disabled>
								</div>
						{{#each data}}
								<div class="coupon-input form-row-last">
									<label class="formulario_label">País de nacimiento</label>
									<input class="formulario_input" id="pais_nacimiento" name="pais_nacimiento" type="text" value="{{p_nacimiento}}">
								</div>
								<div class="coupon-input form-row-last">
									<label class="formulario_label">Edad</label>
									<input class="formulario_input" id="edad" name="edad" type="text" value="{{edad}}">
								</div>
								<div class="formulario_grupo" id="grupo_fechanacimiento">
									<label for="fecha_nacimiento" class="formulario_label">Fecha de nacimiento:</label>
									<div class="formulario_grupo-input">
										<input type="date" class="formulario_input" name="f_nacimiento" id="f_nacimiento"
											placeholder="aaaa-mm-dd">
									</div>
								</div>
								<div class="coupon-input form-row-last">
									<label class="formulario_label">Género</label>
									<select name="genero" id="genero" class="formulario_input">
										<option value="">-- Seleccione una opcion --</option>
										<option value="Femenino">Femenino</option>
										<option value="Masculino">Masculino</option>
									</select>
								</div>
								<div class="coupon-input form-row-last">
									<label class="formulario_label">Número de documento de viaje (Pasaporte)</label>
									<input class="formulario_input" id="pasaporte" name="pasaporte" type="text" maxlength="10"
										onpaste="return false" onkeypress="return validate(event)" value="{{pasaporte}}">
								</div>
								<div class="coupon-input form-row-last">
									<label class="formulario_label">País que valida el documento</label>
									<input class="formulario_input" id="pais_validacion" name="pais_validacion" type="text" value="{{p_validacion}}">
								</div>
								<div class="formulario_grupo" id="grupo_fecha_expiracion">
									<label for="fecha_expiracion" class="formulario_label">Fecha que expira:</label>
									<div class="formulario_grupo-input">
										<input type="date" class="formulario_input" name="f_expiracion" id="f_expiracion"
											placeholder="aaaa-mm-dd">
									</div>
								</div>
								<div class="coupon-input form-row-last">
									<label class="formulario_label">Ocupación</label>
									<input class="formulario_input" id="ocupacion" name="ocupacion" type="text" value="ocupacion">
								</div>
					{{/each}}
								<div class="formulario_grupo formulario_grupo-btn-enviar">
								<button onclick="" type="button" class="formulario_btn" >Editar</button>
								</div>
							</form>
						</main>
				{{else}}
					<div class="container-fluid">
						<div class="row">
							<div class="col">
								<p><strong>Nombre del pasajero:</strong> <br> {{nombre}} {{paterno}} {{materno}}</p>
							</div>
						</div>
						<br>
						{{#each data}}
							<div class="row">
								<div class="col">
									<p><strong>Edad:</strong> <br> {{edad}}</p>
								</div>
								<div class="col">
									<p><strong>Fecha de nacimiento:</strong> <br> {{f_nacimiento}}</p>
								</div>
								<div class="col">
									<p><strong>País de nacimiento:</strong> <br> {{p_nacimiento}}</p>
								</div>
							</div>
							<br>
							<div class="row">
								<div class="col">
									<p><strong>Número de documento de viaje (Pasaporte):</strong> <br> {{pasaporte}}</p>
								</div>
								<div class="col">
									<p><strong>País que valida el documento:</strong> <br> {{p_validacion}}</p>
								</div>
								<div class="col">
									<p><strong>Fecha que expira:</strong> <br> {{f_expiracion}}</p>
								</div>
							</div>
							<br>
							<div class="row">
								<div class="col">
									<p><strong>Ocupación: </strong> {{ocupacion}}</p>
								</div>
							</div>	
						{{/each}}	
					</div>
				{{/if}}
			{{else}}
				<main>
						<form id="form_identificacion" class="formulario">
							<div class="coupon-input form-row-last">
								<label class="formulario_label">Nombre</label>
								<input class="formulario_input" id="nombre" name="nombre" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label class="formulario_label">Paterno</label>
								<input class="formulario_input" id="paterno" name="paterno" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label class="formulario_label">Materno</label>
								<input class="formulario_input" id="materno" name="materno" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label class="formulario_label">País de nacimiento</label>
								<input class="formulario_input" id="pais_nacimiento" name="pais_nacimiento" type="text">
							</div>
							<div class="coupon-input form-row-last">
								<label class="formulario_label">Edad</label>
								<input class="formulario_input" id="edad" name="edad" type="text">
							</div>
							<div class="formulario_grupo" id="grupo_fechanacimiento">
								<label for="fecha_nacimiento" class="formulario_label">Fecha de nacimiento:</label>
								<div class="formulario_grupo-input">
									<input type="date" class="formulario_input" name="f_nacimiento" id="f_nacimiento"
										placeholder="aaaa-mm-dd">
								</div>
							</div>
							<div class="coupon-input form-row-last">
								<label class="formulario_label">Género</label>
								<select name="genero" id="genero" class="formulario_input">
									<option value="Femenino">Femenino</option>
									<option value="Masculino">Masculino</option>
								</select>
							</div>
							<div class="coupon-input form-row-last">
								<label class="formulario_label">Número de documento de viaje (Pasaporte)</label>
								<input class="formulario_input" id="pasaporte" name="pasaporte" type="text" maxlength="10"
									onpaste="return false" onkeypress="return validate(event)">
							</div>
							<div class="coupon-input form-row-last">
								<label class="formulario_label">País que valida el documento</label>
								<input class="formulario_input" id="pais_validacion" name="pais_validacion" type="text">
							</div>
							<div class="formulario_grupo" id="grupo_fecha_expiracion">
								<label for="fecha_expiracion" class="formulario_label">Fecha que expira:</label>
								<div class="formulario_grupo-input">
									<input type="date" class="formulario_input" name="f_expiracion" id="f_expiracion"
										placeholder="aaaa-mm-dd">
								</div>
							</div>
							<div class="coupon-input form-row-last">
								<label class="formulario_label">Ocupación</label>
								<input class="formulario_input" id="ocupacion" name="ocupacion" type="text">
							</div>
							<div class="formulario_grupo formulario_grupo-btn-enviar">
							<button onclick="identificacion_pasajero()" type="button" class="formulario_btn" >Guardar</button>
							</div>
						</form>
				</main>
			{{/if}}


		</div>
		{{>sidebar}}

		{{>footer}}
	</div>
	{{>script}}
</body>

</html>