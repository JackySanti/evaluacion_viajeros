                            </div>  
                            <div class="formulario_grupo formulario_grupo-btn-enviar">     
                            <button onclick="informacion_medica()" type="button"  class="formulario_btn">Guardar</button>
                            </div>
                        </form>
                    </main>
            {{/if}}            
        </div>
		{{>sidebar}}

		{{>footer}}
	</div>
	{{>script}}
</body>

</html>