<body>
    {{>header}}
	<div class="contenedor">

		<div class="contenido">
			<h1>Condición Médica</h1><br>

            {{#if registro}}
                {{#if permiso}}
                    <main>
                        <form id="form_condicion" class="formulario">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if diabetes}} checked {{/if}} name="diabetes" id="diabetes">
                                <label class="form-check-label" for="diabetes">
                                    Diabetes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if hipertension}} checked {{/if}} name="hipertension" id="hipertension">
                                <label class="form-check-label" for="hipertension">
                                    Hipertensión 
                                </label>
                            </div>  
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if tabaquismo}} checked {{/if}} name="tabaquismo" id="tabaquismo">
                                <label class="form-check-label" for="tabaquismo">
                                    Tabaquismo
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if alcholismo}} checked {{/if}} name="alcoholismo" id="alcoholismo">
                                <label class="form-check-label" for="alcoholismo">
                                    Alcoholismo 
                                </label>
                            </div>  
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if obseidad}} checked {{/if}} name="obesiada" id="obesiada">
                                <label class="form-check-label" for="obesiada">
                                    Obesidad (IMC) 
                                </label>
                            </div>  
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if vacunacion}} checked {{/if}} name="vacunacion" id="vacunacion">
                                <label class="form-check-label" for="vacunacion">
                                    Vacunación
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if e_cardiaca}} checked {{/if}} name="cardiaca" id="cardiaca">
                                <label class="form-check-label" for="cardiaca">
                                    Enfermedad Cardiaca 
                                </label>
                            </div>  
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if nefropatia}} checked {{/if}} name="renal" id="renal">
                                <label class="form-check-label" for="renal">
                                    Nefropatía (Enfermedad Renal) 
                                </label>
                            </div>  
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if hepatopatia}} checked {{/if}} name="hepatica" id="hepatica">
                                <label class="form-check-label" for="hepatica">
                                    Hepatopatía (Enfermedad Hepatica)
                                </label>
                            </div>  
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if e_pulmonar}} checked {{/if}} name="pulmonar" id="pulmonar">
                                <label class="form-check-label" for="pulmonar">
                                    Enfermedad Pulmonar 
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if e_inmune}} checked {{/if}} name="inmune" id="inmune">
                                <label class="form-check-label" for="inmune">
                                    Enfermedad Inmune (VIH/ Trasplante de Órgano)
                                </label>
                            </div>  
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" {{#if cancer}} checked {{/if}} name="cancer" id="cancer">
                                <label class="form-check-label" for="cancer">
                                    Cáncer
                                </label>
                            </div>  
                            <p class="coupon-input form-row-last">
                                <label class="form-check-label formulario_label">Otras enfermedades: </label>
                                <textarea class="form-control txt" id="otra" aria-label="With textarea"></textarea>
                            </p>
                            <div class="formulario_grupo formulario_grupo-btn-enviar">
                            <button onclick="" type="button" class="formulario_btn">Editar</button></div>
                        </form> 
                    </main>
                {{else}}
                    <div class="container-fluid">
                        <br>
                        {{#each data}}
